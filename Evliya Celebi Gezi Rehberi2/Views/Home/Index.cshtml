        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" style="height:720px" src="@Url.Content(Model[1].Resim)" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@Model[1].Adi</h5>
                <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" style="height:720px" src="@Url.Content(Model[2].Resim)" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@Model[2].Adi</h5>
                <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" style="height:720px" src="@Url.Content(Model[3].Resim)" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@Model[3].Adi</h5>
                <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon"  aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container body-content">
    <h2 id="popular">Görmek isteyeceğiniz şehirler</h2>
    <div class="row " style="margin-left: 15px; margin-bottom: 100px;">
        @{
            int GosterimSayisi = 6;
            int[] Sehirler = new int[GosterimSayisi];
            Random random = new Random();
            int i = 0;


            while (i < GosterimSayisi)
            {

                int sayi = random.Next(1, Model.Count());

                if (Sehirler.Contains(sayi))
                {

                    continue;
                }
                else
                {


                    Sehirler[i] = sayi;
                    i++;

                    if (i > 3)
                    {

                        <div class="col-md-4 alt">
                            <a href="/Home/SehirDetails/@Model[sayi].Id">
                                <div class="con">
                                    <img src=@Url.Content(Model[sayi].Resim) alt="" class="homeimg">
                                    <div class="center">@Model[sayi].Adi</div>
                                </div>
                            </a>
                        </div>

                    }
                    else
                    {
                        <div class="col-md-4 ">
                            <a href="/Home/SehirDetails/@Model[sayi].Id">
                                <div class="con">
                                    <img src=@Url.Content(Model[sayi].Resim) alt="" class="homeimg">
                                    <div class="center">@Model[sayi].Adi</div>
                                </div>
                            </a>
                        </div>

                    }
                }

            }


        }

    </div>





    </div>
