@model IEnumerable<Evliya_Celebi_Gezi_Rehberi2.Models.Bolge>

@{
    ViewBag.Title = "Index";
} <div class="container">
    <p>
        <h2>Index</h2>
    </p>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adi)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p>@Html.DisplayFor(modelItem => item.Adi)<p>
                </td>
                <td>
                    <a href="@Url.Action("Details","Bolge",new { id = item.Id })" class="btn btn-success">
                        <i class="far fa-eye"></i>
                        <span>
                            Details
                        </span>
                    </a>
                    <a href="@Url.Action("Edit","Bolge",new { id = item.Id })" class="btn btn-info">
                        <i class="fas fa-edit"></i>
                        <span>
                            Edit
                        </span>
                    </a>
                    <a href="@Url.Action("Delete","Bolge",new { id = item.Id })" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                        <span>
                            Delete
                        </span>
                    </a>


                </td>
            </tr>
        }

    </table>
</div>